<script>
    $("#select").change(function(year,collage){
    var year=$("#select.year").val();  
    var collage=$("#select.collage").val();  
    $.post("/Test.json",
    {
      year:year,
      collage:collage
    },
    function(data){
    var s = data; 
    var major=s.split(",");
    for(var i;i<10;i++){
    $("#select.major").append("<option value='i'>major[i]</option>");
    }
    }
  });
});
</script>
